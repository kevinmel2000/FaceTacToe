<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:angle="90"
                android:endColor="@color/color_light_soft_blue"
                android:startColor="@color/color_light_dark_blue" />
            <stroke
                android:width="1dp"
                android:color="@color/color_dark_grey" />
            <corners android:radius="3dp" />
        </shape>
    </item>
    
    <item android:state_focused="true">
        <shape>
            <gradient
                android:angle="90"
                android:endColor="@color/color_medium_soft_blue"
                android:startColor="@color/color_medium_dark_blue" />
            <stroke
                android:width="1dp"
                android:color="@color/color_dark_grey" />
            <corners android:radius="3dp" />
        </shape>
    </item>
    
    <item>
        <shape>
            <gradient
                android:angle="90"
                android:endColor="@color/color_strong_soft_blue"
                android:startColor="@color/color_strong_dark_blue" />
            <stroke
                android:width="1dp"
                android:color="@color/color_dark_grey" />
            <corners android:radius="3dp" />
        </shape>
    </item>

</selector>